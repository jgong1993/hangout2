<!doctype html>

<html>
<head>
	<title>hangouts R us - Plan an Event</title>
	{{> imports}}
</head>
<body>
	<div class="container-fluid">
		{{> dropdownPartial}}
	</div>
	<div class="bodyContainer">
		<form id="planEventForm" role="form" method="get" action="/planEventResult">
			<h3>Plan an event below</h3>
		    <div class="form-group">
		      <label for="title">What do you wanna do:</label>
		      <input type="text" class="form-control" id="title" placeholder="Example: go on a shopping spree" name="title">
		    </div>

		    <div class="form-group">
		      <label for="selectsquad">Choose your group:</label>
		      <select name="group">
		      	{{#each groups}}
		      	<option value="{{name}}">{{name}}</option>
		      	{{/each}}
		      </select>
		    </div>

		    <div class="form-group">
		      <label for="plandate">Date:</label>
		      <input type="date" class="form-control" id="plandate" placeholder="Example: February 29" name="when">
		    </div>

		    <div class="form-group">
		      <label for="plandate">Time:</label>
		      <input type="time" class="form-control" id="whatTime1" name="whatTime1">
		      to
		      <input type="time" class="form-control" id="whatTime2" name="whatTime2">
		    </div>
		    
		    <input type="submit" id="submitBtn" class="btn btn-default" value="Plan this event!"></input>
		</form>
	</div>

	{{> footer}}
	<script src="js/introHCI.js"></script>
	<script>
		$(document).ready(function() {
			$("#wrapper").toggleClass("toggled");
		});

		$("#showGroup").click(function(e) {
	        e.preventDefault();
	        $("#submenu").toggle();
	    });
    </script>
    {{> googleAnalytics}}
</body>
</html>