		<br>
		<h1>By the way, Here is the list of all suggested events</h1>
		{{#each suggested_events}}
			<div>
				<h2>{{title}}</h2>
				<h3>{{group}}</h3>
				<h4>{{when}}</h4>
				<hr>
			</div>
		{{/each}}
	</div>

	<script src="js/jquery.js"></script>
