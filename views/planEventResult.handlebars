<!doctype html>

<html>
<head>
	<title>hangouts R us - Plan an Event</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/sidebar.css" rel="stylesheet">
	<link href="css/style.css" rel="stylesheet">
	<link href="css/dropdown.css" rel="stylesheet">
	<!-- this is a comment in HTML -->    
	<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
</head>
<body>
	<div id="wrapper">
			<div class="container-fluid">
				<div class="jumbotron">
					<h1>Nicely done!</h1>
				</div>
				{{> dropdownPartial}}
				<hr>
				<h1>Congrats! New Event is planned and your squad can now vote!</h1>
				<h3>What do you want to do now?</h3>
				<h4>To go the main page click <a href="/homepage" class="btn btn-info" role="button">here</a></h4>
				<h4>To see upcoming events click <a href="/upcomingEvents" class="btn btn-info" role="button">here</a></h4>
				<br>
				<h1>By the way, Here is the list of all suggested events</h1>
				{{#each suggested_events}}
					<div>
						<h2>{{title}}</h2>
						<h3>{{group}}</h3>
						<h4>{{when}}</h4>
						
						
						<hr>
					</div>
				{{/each}}
			</div>
		</div>
	</div>

	<script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
	<script src="js/dropdown.js"></script>
	<script>
		$(document).ready(function() {
			$("#wrapper").toggleClass("toggled");
		});

		$("#showGroup").click(function(e) {
	        e.preventDefault();
	        $("#submenu").toggle();
	    });
	    $("#menu2-toggle").click(function(e) {
	        e.preventDefault();
	        $("#wrapper").toggleClass("toggled");
	    });
	     $("#menu3-toggle").click(function(e) {
	        e.preventDefault();
	        $("#wrapper").toggleClass("toggled");
	    });
    </script>
</body>
</html>